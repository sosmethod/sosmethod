{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "stripInternal": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "es2015",
        "moduleResolution": "node",
        "noEmitOnError": false,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "outDir": "./dist",
        "rootDir": ".",
        "sourceMap": true,
        "inlineSources": false,
        "lib": [
            "es2015",
            "dom"
        ],
        "target": "es5",
        "skipLibCheck": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            // add path to @types
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        "public",
        "functions"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    },
    "angularCompilerOptions": {
        "genDir": "aot",
        "skipMetadataEmit": true
    }
}
